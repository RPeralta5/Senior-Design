
<head>
    <style>
        /* Set the size of the div element that contains the map */
        #map {
            height: 400px; /* The height is 400 pixels */
            width: 100%; /* The width is the width of the web page */
        }

        #example1 {
        width: 10%;
        height: 10%;
        }


       
    </style>
</head>
<body>
    <!-- QUICK NAVS-->
    <div>
        <center>
            <h3 style="color:navy; font-weight:bold;">@ViewBag.store.ParkName</h3>
            <br />


            <nav>
                <a class="btn btn-light" href="#Amenities" style="button">Amenities</a>
                <a class="btn btn-light" href="#Hours">Hours</a>
                <a class="btn btn-light" href="#CalendarEvents">Calendar Events</a>
            </nav>
        </center>
    </div>
    <br />

    <!-- START OF CAROUSEL -->
   

    <div id="carouselThumbnails" class="carousel slide" data-ride="carousel">





        <div class="carousel-inner">
            @{
                int c = 0;
            }

            @foreach (Parks_SpecialEvents.Models.Image image in ViewBag.Images.images)
            {
                if (c == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src=@Url.Content(image.ImagePath) alt="First slide" height="570" />
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src=@Url.Content(image.ImagePath) alt="Second slide" height="570" />
                    </div>
                }
                c++;
            }

            <ul class="carousel-indicators" type="none">
                @{
                    int count2 = 0;
                }
                @foreach (Parks_SpecialEvents.Models.Image image in ViewBag.Images.images)
                {

                    if (count2 == 0)
                    {
                        <li data-target="#carouselThumbnails" data-slide-to=@count2 class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselThumbnails" data-slide-to=@count2></li>
                    }
                    count2++;
                }
            </ul>

        </div>

        <br />
        <div>


            <a class="carousel-control-prev" href="#carouselThumbnails" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselThumbnails" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div>
        <ul class="carousel-thumbnails" type="none">
            @{
                int count = 0;
            }
            @foreach (Parks_SpecialEvents.Models.Image image in ViewBag.Images.images)
            {

                if (count == 0)
                {
                    <li data-target="#carouselThumbnails" data-slide-to=@count class="active">
                        <img class="d-block w-100" src=@Url.Content(image.ImagePath) id="example1" />
                    </li>
                }
                else
                {
                    <li data-target="#carouselThumbnails" data-slide-to=@count>
                        <img class="d-block w-100" src=@Url.Content(image.ImagePath) id="example1" />
                    </li>
                }
                count++;
            }
        </ul>
    </div>

    <!-- END OF CAROUSEL -->
    <!-- START OF PARK AMENITIES-->
    <br />
    <br />
    <br />

    <div>
        <left>
            <text style="color:black;">Address: </text>
            <text style="color:navy; font-weight:bold;">@ViewBag.store.Address</text>
            <br />
            <text style="color:black;">Phone Number: </text>
            <!--


                <h5 style="color:navy; font-weight:bold;">Phone Number: Unavailable</h5>



                <h5 style="color:navy; font-weight:bold;"></h5>

            -->
            <br />

        </left>
    </div>

    <br />
    <div>

        <center>
            <h4 id="Amenities" style="color:navy; font-weight:bold;">Special Event Amenities</h4>
            <br />

        </center>

        <ul style="list-style-type:disc;">

            @foreach (Parks_SpecialEvents.Models.Amenity amenity in ViewBag.Amenities.amenities)
            {

                <li>

                    <strong>@amenity.Amen</strong>

                </li>

            }
        </ul>

    </div>
    <!-- END OF PARK AMENITIES-->
    <!--The div element for the map -->
    <div id="map"></div>
    <script>
// Initialize and add the map
function initMap() {
  // The location of Uluru
  var uluru = {lat: @ViewBag.store.Lat, lng: @ViewBag.store.Lng};
  // The map, centered at Uluru
  var map = new google.maps.Map(
      document.getElementById('map'), {zoom: 15, center: uluru});
  // The marker, positioned at Uluru
  var marker = new google.maps.Marker({position: uluru, map: map});
}
    </script>
    <!--Load the API from the specified URL
    * The async attribute allows the browser to render the page while the API loads
    * The key parameter will contain your own API key (which is not needed for this tutorial)
    * The callback parameter executes the initMap() function
    -->
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=GOOGLE_API_KEY&callback=initMap"></script>

