
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

<h2>Update @ViewBag.ParkName</h2>

<div class="container">

    <form asp-controller="Admin" asp-action="EditPark">
        <h3>Events</h3>
        @{
            List<Event> events = new List<Event>();
        }
        <div class="container">
            @foreach(Parks_SpecialEvents.Models.Event e in ViewBag.Events)
            {
                <br />
                <strong>@e.P</strong>
                @if(e.Flag == 1)
                {
                    <input type="checkbox" checked data-toggle="toggle" name='@e.Href'>
                    events.Add(new Event(e.P, "", 1));
                } else
                {
                    <input type="checkbox" data-toggle="toggle" name=@e.Href>
                    events.Add(new Event(e.P, "", 0));
                }
            }
        </div>
        <input type="hidden" value=@events name="events" />
        <input type="submit" value="Update Park" class="btn btn-success"/>
    </form>

</div>