
<div class="alert alert-danger" role="alert">
    <h2>Delete action can not be undone. Make sure you want to delete this Question</h2>
</div>

<form asp-controller="Admin" asp-action="DeleteQuestion" asp-route-id="@ViewBag.Question.ID">
    <div class="container">
        Question: <code>@ViewBag.Question.Q</code> <br />
        Answer: <code>@ViewBag.Question.Answer</code> <br />

        <button type="submit" class="btn btn-warning">Delete</button>
    </div>
</form>

