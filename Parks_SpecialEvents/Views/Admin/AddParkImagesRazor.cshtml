@model Parks_SpecialEvents.Models.AzureParkImages

<h2>Add Park Images</h2>

<div class="alert alert-success" role="alert">
    Successfully added Amenities to @ViewData["parkID"]!
</div>

<div class="container">
    <form asp-controller="Admin" asp-action="AddParkImages">
        <!-- CHOOSE PARK IMAGES -->
        <div class="custom-file">
            <input type="hidden" asp-for="ParkID" value="@ViewData["parkID"]"/>
            <input multiple="multiple" type="file" class="custom-file-input" asp-for="Images">
            <label class="custom-file-label" for="customFile">Choose Park Images</label>
        </div> <br /> <br />

        <input type="submit" value="Add Images" class="btn btn-success" />
    </form>
</div>