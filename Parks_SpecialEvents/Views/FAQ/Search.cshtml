<!-- DISPLAY SEARCHED QUESTIONS-->
<div class="containter">
    <div class="row">
        @{int counter = 1;}
        @foreach (Parks_SpecialEvents.Models.Question i in @ViewBag.storing.questions)
        {
            <div class="col-sm-4 py-2">
                <div id="accordion">
                    <div class="card">
                        @{
                            string c = counter.ToString();
                            string dataTarget = "#collapse" + c;
                            string idForCollapse = "collapse" + c;
                            string heading = "heading" + c;
                        }
                        <div class="card-header" id=@heading style="height: 150px; background-color: navy">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" data-target=@dataTarget aria-expanded="true" aria-controls=@idForCollapse>
                                    <font color="white"><b>@i.Q</b></font>
                                </button>
                            </h5>
                        </div>

                        <div id=@idForCollapse class="collapse hide" aria-labelledby=@heading data-parent="#accordion">
                            <div class="card-body">
                                @i.Answer
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            counter++;
        }
    </div>
</div>

