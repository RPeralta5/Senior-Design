@model PROJECT.Models.Question

<center>
    <h2>Frequently Asked Questions</h2>
</center>
<title>FAQ</title>

<!--
    SEARCH FOR SPECIFIC QUESTION OR TOPIC
-->
<div class="d-flex justify-content-center mt-3">
    <form asp-controller="FAQ" asp-action="Search">
        <strong>Search: </strong>
        <input name="search" />
        <input type="submit" class="btn btn-primary" />
    </form>
</div>

<!--
   PARKS WITH PERMITS TO HOLD SPECIFIC REQUIREMENTS:
    EX. PARKS THAT CAN HOLD ALCOHOL
    OR PARKS THAT CAN HOLD MUSIC FESTIVALS
-->
<p>
    <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        Parks that can Hold Alcohol
    </a>
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Button with data-target
    </button>
</p>
<div class="collapse" id="collapseExample">
    <div class="card card-body">
        Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry richardson ad squid. Nihil anim keffiyeh helvetica, craft beer labore wes anderson cred nesciunt sapiente ea proident.
    </div>
</div>

<!--
    DISPLAY ALL QUESTIONS:
     SINCE THIS IS THE INDEX PAGE
-->

<div class="containter">
    <div class="row">
        @{int counter = 1;
        }
        @foreach (PROJECT.Models.Question i in @ViewBag.storing.questions)
        {
        <div class="col-sm-4 py-2">
            <div id="accordion">
                <div class="card">
                    @{
                        string c = counter.ToString();
                        string dataTarget = "#collapse" + c;
                        string idForCollapse = "collapse" + c;
                        string heading = "heading" + c;
                    }
                    <div class="card-header" id=@heading>
                        <h5 class="mb-0">
                            <button class="btn btn-link" data-toggle="collapse" data-target=@dataTarget aria-expanded="true" aria-controls=@idForCollapse>
                                @i.Q
                            </button>
                        </h5>
                    </div>

                    <div id=@idForCollapse class="collapse hide" aria-labelledby=@heading data-parent="#accordion">
                        <div class="card-body">
                            @i.Answer
                        </div>
                    </div>
                </div>
            </div>
    </div>
   counter++;
}
    </div>
</div>

<!-- CONTACT INFORMATION-->
<address>
    <strong>
        <a href="mailto:EMAIL@gmail.com">Contact</a>
    </strong>
</address>
    
