            </div>
            <div class="col-sm-pull-1">
                <input class="form-check-input" type="checkbox" id="AlcoholBeverages" name="AlcoholBeverages" value="Sold">
                <label class="form-check-label" for="AlcoholBeverages">Sold</label>
            </div>
            <div class="col-sm-pull-1">
                <input class="form-check-input" type="checkbox" id="AlcoholBeverages" name="AlcoholBeverages" value="Third Party">
                <label class="form-check-label" for="AlcoholBeverages">None</label>
            </div>
            @Html.ValidationMessageFor(model => model.AlcoholBeverages, "", new { @class = "text-danger" })
        </div>

