<!--Display Table that is related to the ID from EventInfo Page, then you will make a delete that will delete by selecting the row the person wants to delete-->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "" })
