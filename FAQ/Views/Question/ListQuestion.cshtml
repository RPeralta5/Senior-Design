@model IEnumerable<FAQSearch.Models.QuestionModel>

@{
    ViewBag.Title = "ListQuestion";
}

<h2>ListQuestion</h2>

<p>
    @Html.ActionLink("Index", "Index")
</p>
<form action="/Question/Submit" method="post">
    <input type="text" name="question" />
    <input type="submit" value="Submit" />
</form>

<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnswerText)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnswerText)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


