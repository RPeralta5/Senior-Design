@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.Blog>

@{
    ViewData["Title"] = "Index";
}

<h1>Blogs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Blogs" asp-action="SearchAsync">

    Search: <input name="search" />
    <input type="submit" value="Search" class="btn btn-primary">
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BlogId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BlogId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
